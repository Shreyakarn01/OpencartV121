<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Master Suite">

    <!-- Instead of giving group name as Master, Sanity, Regression we can give A, B, C also but try to use relevant names -->
	<groups>
		<run>
			<include name="Master" />  <!-- executes both Registration and login test as contained in this group -->
			<!-- <include name="Sanity" /> -->   <!-- only executes LoginTest even if in the <test> tag other testcases are also specified -->
			<!-- <include name="Regression" /> -->  <!-- only executes registration test case -->
			<!-- <exclude name="Master"/> -->
		</run>
	</groups>
     <!-- Add this groups tag before <test> tag and after <suite> tag -->


     <listeners>
		<listener class-name="utilities.ExtentReportManager" /> <!-- To generate the extent report using ExtentReportManager class in utilities package -->
	</listeners>
	
	
	<test name="Test" thread-count="5">
		<parameter name="os" value="Windows" />
		<parameter name="browser" value="edge" />
		<classes>
			<class name = "testCases.TC001_AccountRegistrationTest"/>
			<class name = "testCases.TC002_LoginTest"/>
			<!-- <class name="testCases.TC003_LoginDDT" /> -->
		</classes>
	</test>
</suite>
<!-- we need to pass browser and OS name both here -->
<!-- We will maintain 2 xml files, one for running 'master suite' and one 
	for 'parallel testing' -->